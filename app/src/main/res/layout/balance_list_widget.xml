<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/widget_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundWidget"
        android:orientation="vertical"
        android:padding="@dimen/widget_margin">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/app_name"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:textColor="@color/colorTextWidget"
                android:textSize="16sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/widget_lock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_gravity="right"
                android:scaleType="fitCenter"
                android:tint="@color/colorTextWidget"
                android:src="@drawable/ic_lock"/>
        </FrameLayout>

        <GridView
            android:id="@+id/widget_balance_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            tools:listitem="@layout/item_browse" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/widget_lock_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/widget_unlock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_gravity="top|end"
            android:scaleType="fitCenter"
            android:tint="@color/colorTextWidget"
            android:src="@drawable/ic_unlock"/>
    </FrameLayout>
</FrameLayout>