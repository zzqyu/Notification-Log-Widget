<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_item_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:ignore="UseCompoundDrawables">

    <TextView
        android:id="@+id/widget_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:contentDescription="item icon"
        android:src="@drawable/ic_noti"
        tools:ignore="HardcodedText" />

    <FrameLayout
        android:id="@+id/widget_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/widget_bank_name"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWidget"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/widget_bank_balance"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWidget"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

    </FrameLayout>

    <TextView
        android:id="@+id/widget_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_item_title"
        android:layout_alignStart="@+id/widget_item_title"
        android:ellipsize="end"
        android:padding="3dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/colorTextWidget"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />
</RelativeLayout>